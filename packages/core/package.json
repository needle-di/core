{
  "name": "@needle-di/core",
  "version": "0.11.2",
  "description": "A simple TypeScript library for dependency injection",
  "license": "MIT",
  "keywords": [
    "dependency injection",
    "di",
    "dependency",
    "injection",
    "typescript",
    "type-safe"
  ],
  "homepage": "https://needle-di.io",
  "author": {
    "name": "Dirk Luijk",
    "email": "mail@dirkluijk.nl"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/needle-di/needle-di.git"
  },
  "type": "module",
  "module": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "./dist/**/**"
  ],
  "scripts": {
    "check-types": "tsc",
    "check-types:watch": "tsc -w",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --silent --coverage --coverage.reporter=json-summary",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier src/**/*.ts README.md --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@release-it/bumper": "^6.0.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.9.1",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "^9.14.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "prettier": "^3.3.3",
    "typescript": "~5.7.0",
    "typescript-eslint": "^8.6.0",
    "vitest": "^2.1.1"
  }
}
